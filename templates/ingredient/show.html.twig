{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center text-center flex-column">

        <h1>Ingredient</h1>
        
        <table class="table d-flex justify-content-center text-center border-dark">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ingredient.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ ingredient.name }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ ingredient.price }}</td>
                </tr>
                <tr>
                    <th>Cr√©e le</th>
                    <td>{{ ingredient.createdAt ? ingredient.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
        
        
        <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}"><button class="btn m-1 btn-warning btn-sm">Modifier</button></a>
        
        <div>
            {{ include('ingredient/_delete_form.html.twig') }}
        </div>
        
        <a href="{{ path('app_ingredient_index') }}"><button class="btn btn-secondary m-1 btn-sm">Retour a la liste</button></a>
    </div>

{% endblock %}
